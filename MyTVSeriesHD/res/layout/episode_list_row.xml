<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:background="@drawable/blue_gradient_shape"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/image_sub"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/ic_sub" />

    <ImageView
        android:id="@+id/image_download"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/image_sub"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/ic_download" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/image_download"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/ic_view" />

    <ImageView
        android:id="@+id/poster"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/rounded_button"
        android:src="@drawable/full_shape" />

    <TextView
        android:id="@+id/episode_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/poster"
        android:layout_alignLeft="@+id/poster"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="10dp"
        android:shadowColor="#FFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/episode_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/poster"
        android:layout_toLeftOf="@+id/image_view"
        android:layout_toRightOf="@+id/poster"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="10dp"
        android:shadowColor="#00ccff"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:singleLine="true"
        android:textColor="#031860"
        android:textSize="13dp"
        android:textStyle="bold" />

</RelativeLayout>