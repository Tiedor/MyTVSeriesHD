<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/posterContainer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_rect" >

    <ImageView
        android:id="@+id/poster"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_margin="7dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/uniform_shape" />

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/poster"
        android:layout_alignRight="@+id/poster"
        android:layout_alignTop="@+id/poster"
        android:layout_alignBottom="@+id/poster"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:id="@+id/relativeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/poster"
        android:layout_alignTop="@+id/poster"
        android:layout_marginTop="2dp"
        
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="1dp" >

        <TextView
            android:id="@+id/myImageViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center|left"
            android:lines="1"
            android:shadowColor="#00ccff"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:singleLine="true"
            android:textAlignment="textEnd"
            android:textColor="@color/mycolor"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/poster"
		android:layout_toRightOf="@+id/poster"
        android:layout_marginBottom="5dp"
        
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="1dp" >

        <TextView
            android:id="@+id/myImageViewText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center|left"
            android:lines="1"
            android:shadowColor="#00ccff"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:singleLine="true"
            android:textAlignment="textEnd"
            android:textColor="@color/mycolor"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>