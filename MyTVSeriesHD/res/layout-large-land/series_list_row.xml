<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/image_banner"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/no_banner_found" />

    <RelativeLayout
        android:id="@+id/ic_menu_expand_layout"
        android:layout_width="70dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >
    </RelativeLayout>

    <TextView
        android:id="@+id/series_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/series_next_episode"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ic_menu_expand_layout"
        android:ellipsize="end"
        android:lines="1"
        android:shadowColor="#00ccff"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:singleLine="true"
        android:textColor="@color/mycolor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/series_next_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/series_name"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/ic_menu_expand_layout"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
        android:textColor="@color/mycolor"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/series_next_episode_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/series_next_episode"
        android:layout_alignRight="@+id/series_next_episode"
        android:layout_below="@+id/series_next_episode"
        android:textColor="@color/mycolor"
        android:textSize="13sp" />

</RelativeLayout>