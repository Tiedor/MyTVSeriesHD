<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item>
		<shape 
		    android:shape="rectangle"
			android:dither="true">

			<solid android:color="#DBDBDB" />
			
			<padding
			    android:top="4dp"
			    android:left="2dp" 
			    android:right="2dp"/>
		</shape>
	</item>

	<item 
	    android:bottom="2dp"
	    android:left="2dp"
	    android:right="5dp">
		<shape 
		    android:shape="rectangle"
			android:dither="true">

			<solid
			     
			    android:color="@android:color/white" />
		</shape>
	</item>
</layer-list>